{
  "manifest_version": 3,
  "name": "Dobby Reply Assistant",
  "version": "1.0.0",
  "description": "AI-powered reply suggestions for Twitter/X using Sentient Social Agent",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Dobby Reply Assistant",
    "default_icon": {
      "16": "dobby.png",
      "32": "dobby.png",
      "48": "dobby.png",
      "128": "dobby.png"
    }
  },
  "icons": {
    "16": "dobby.png",
    "32": "dobby.png",
    "48": "dobby.png",
    "128": "dobby.png"
  }
}
